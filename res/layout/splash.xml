<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:focusable="true">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:text="@string/app_name2"
            android:id="@+id/textView" android:layout_gravity="center_horizontal" android:textColor="#fffcfffd"
            android:textIsSelectable="false" android:textStyle="bold" android:textSize="30sp"
            android:gravity="center"
            android:background="@color/primary_dark"
            android:elevation="@dimen/elevation_high"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:background="@color/primary"
            android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/myLogo"
                    android:src="@drawable/app_logo"/>
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/version"
                android:id="@+id/versionText" android:layout_gravity="bottom|center" android:gravity="bottom|center"
                android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>